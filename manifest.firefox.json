{
  "manifest_version": 3,
  "name": "OpenAI Forge",
  "description": "OpenAI Forge Browser Extension.",
  "version": "0.1.5",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "type": "module"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "openai-forge-firefox@ivangabriele.com",
      "strict_min_version": "115.0"
    }
  },
  "content_security_policy": {
    "extension_pages": "default-src 'self'; connect-src 'self' http://localhost:4242 ws://localhost:4242;"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*"
      ],
      "css": [
        "content.css"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "developer": {
    "name": "Ivan Gabriele",
    "url": "https://www.ivangabriele.com"
  },
  "host_permissions": [
    "https://chat.openai.com/*"
  ],
  "icons": {
    "16": "assets/icons/x16.png",
    "32": "assets/icons/x16.png",
    "48": "assets/icons/x48.png",
    "128": "assets/icons/x128.png"
  }
}